#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

Yellow='\033[0;33m'
Green='\033[0;32m'
Red='\033[0;31m'
NC='\033[0m'

function runScript() {
    echo -e "\n\n ðŸ’¡ ${Yellow} $1 ${NC} \n"
    $2
    if [ $? -eq 0 ]; then
        echo -e "\n\n ${Green} ðŸŽ‰ [$1]: Success! ${NC} \n"
    else
        echo -e "\n\n ${Red} ðŸŽ‰ [$1]: Error! ${NC} \n"
    fi
}

runScript "Run linting TypeScript" "npm run lint:ts:fix"
